<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/skill_name"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="0.3"
        android:gravity="center" />
    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/skill_ability"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:textAllCaps="true"
        android:maxLength="3"
        android:gravity="center" />
    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/skill_total"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:gravity="center" />
    <TextView
        android:layout_marginLeft="8dp"
        android:id="@+id/skill_ability_mod"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:gravity="center" />



    <Button
        android:id="@+id/sub_rank"
        android:layout_width="0sp"
        android:layout_weight="0.1"
        android:layout_height="fill_parent"
        android:onClick="selectSkill"
        android:text="-"
 />
    <TextView
        android:id="@+id/skill_ranks"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:gravity="center_vertical" />
    <Button
        android:id="@+id/add_rank"
        android:layout_width="0sp"
        android:layout_weight="0.1"
        android:layout_height="fill_parent"
        android:onClick="selectSkill"
        android:text="+"
        />
</LinearLayout>