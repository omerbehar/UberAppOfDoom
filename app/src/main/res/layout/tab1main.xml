<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.anothertabtest.MainActivity$PlaceholderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/char_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character's Name"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:hint="choose wisely!"
            android:inputType="textCapWords"

            android:id="@+id/char_name_box"
            android:lines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/char_class_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character's Class"/>
        <Spinner
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:id="@+id/class_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/char_race_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character's Race"/>
        <Spinner
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:id="@+id/race_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Ability"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Strength"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Dexterity"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Constitution"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Intelligence"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Wisdom"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Charisma"
                android:background="@drawable/frame"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Final score"
                android:background="@drawable/frame"
                android:gravity="center"/>

            <TextView
                android:id="@+id/strength_final"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/dexterity_final"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/constitution_final"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/intelligence_final"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/wisdom_final"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/charisma_final"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Editable score"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="20dp"-->
                <!--android:orientation="horizontal">-->
                <!--<Button-->
                    <!--android:layout_weight="0.3"-->
                    <!--android:background="@drawable/ability_button"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="+"-->
                    <!--android:textSize="8dp"-->
                    <!--android:onClick="addOneStrength"/>-->
                <EditText
                android:layout_weight="0.3"
                android:id="@+id/strength_score"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:hint="0"
                android:textSize="14dp"
                android:background="@drawable/frame"
                android:gravity="center"
                android:inputType="number"/>
            <EditText
                android:id="@+id/dexterity_score"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:hint="0"
                android:textSize="14dp"
                android:background="@drawable/frame"
                android:gravity="center"
                android:inputType="number"/>
            <EditText
                android:id="@+id/constitution_score"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:hint="0"
                android:textSize="14dp"
                android:background="@drawable/frame"
                android:gravity="center"
                android:inputType="number"/>
            <EditText
                android:id="@+id/intelligence_score"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:hint="0"
                android:textSize="14dp"
                android:background="@drawable/frame"
                android:gravity="center"
                android:inputType="number"/>
            <EditText
                android:id="@+id/wisdom_score"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:hint="0"
                android:textSize="14dp"
                android:background="@drawable/frame"
                android:gravity="center"
                android:inputType="number"/>
            <EditText
                android:id="@+id/charisma_score"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:hint="0"
                android:textSize="14dp"
                android:background="@drawable/frame"
                android:gravity="center"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Race Adj."
                android:background="@drawable/frame"
                android:gravity="center"/>

            <TextView
                android:id="@+id/strength_race"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/dexterity_race"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/constitution_race"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/intelligence_race"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/wisdom_race"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/charisma_race"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="0"
                android:background="@drawable/frame"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="Bonus"
                android:background="@drawable/frame"
                android:gravity="center"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/strength_bonus"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="-5"
                android:inputType="numberSigned"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/dexterity_bonus"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="-5"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/constitution_bonus"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="-5"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/intelligence_bonus"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="-5"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/wisdom_bonus"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="-5"
                android:background="@drawable/frame"
                android:gravity="center"/>
            <TextView
                android:id="@+id/charisma_bonus"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="-5"
                android:background="@drawable/frame"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="random"
        android:id="@+id/set_random_abilities"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:onClick="testButton"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tester"
        android:text="0"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tester"
        android:text="0"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tester"
        android:text="0"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tester"
        android:text="0"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tester"
        android:text="0"
        android:textSize="30dp"/>
</LinearLayout>
</ScrollView>